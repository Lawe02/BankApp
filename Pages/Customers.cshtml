@page
@model NorthWindApp.Pages.Shared.CustomersModel

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id
                <a asp-page="/Customers"
                asp-route-sortColumn="Id"
                asp-route-sortOrder="asc"
                style="text-decoration:none">
                   <i class="fa-solid fa-arrow-up" style="color:black"></i>
            </a>
                <a asp-page="/Customers"
                asp-route-sortColumn="Id"
                asp-route-sortOrder="desc"
                style="text-decoration:none">
                <i class="fa-solid fa-arrow-down" style="color:black"></i>
            </a>
            </th>
            <th scope="col">Name
                <a asp-page="/Customers"
                asp-route-sortColumn="Name"
                asp-route-sortOrder="asc"
                style="text-decoration:none">
                   <i class="fa-solid fa-arrow-up" style="color:black"></i>
            </a>
                <a asp-page="/Customers"
                asp-route-sortColumn="Name"
                asp-route-sortOrder="desc"
                style="text-decoration:none">
                <i class="fa-solid fa-arrow-down" style="color:black"></i>
            </a>
            </th>
            <th scope="col">Address
                <a asp-page="/Customers"
                asp-route-sortColumn="Address"
                asp-route-sortOrder="asc"
                style="text-decoration:none">
                   <i class="fa-solid fa-arrow-up" style="color:black"></i>
            </a>
                <a asp-page="/Customers"
                asp-route-sortColumn="Address"
                asp-route-sortOrder="desc"
                style="text-decoration:none">
                <i class="fa-solid fa-arrow-down" style="color:black"></i>
            </a>
            </th>
        </tr>
    </thead>
    <tbody>
@{
    foreach(var customer in Model.Customers)
    {
        <tr>
        <td>@customer.Id</td>
        <td>@customer.Name</td>
        <td>@customer.Address</td>
        <td>
        <a 
            asp-page="/Customer/Index"
            asp-route-id="@customer.Id"
            >
            i
        </a>
        </td>
        </tr>
    }
}
</tbody>
 <form method="get">
    <input asp-for="@Model.Q" class="page-input"/>
    <input type="submit" value="Search" class="pagebtn" style="position:relative;"/>
</form>
<tr>
    <a
    class="pagebtn"
    asp-page="/Customers"
    asp-route-pageNr=@(Model.PageNr-1)
    asp-route-sortColumn=@(Model.SortColumn)
    asp-route-sortOrder=@(Model.SortOrder)
    asp-route-q=@(Model.Q)
    style="float:left;"
    >
    Prev
</a>
<a
    class="pagebtn"
    asp-page="/Customers"
    asp-route-pageNr=@(Model.PageNr+1)
    asp-route-sortColumn=@(Model.SortColumn)
    asp-route-sortOrder=@(Model.SortOrder)
    asp-route-q=@(Model.Q) 
    style="float:right;"
    >
    Next
</a>
</tr>
</table>