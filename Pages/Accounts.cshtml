@page
@model NorthWindApp.Pages.AccountsModel
<link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css" />

<table class="table table-striped">
      <thead>
        <tr>
            <th scope="col">Id
                <a asp-page="/Accounts"
                asp-route-sortColumn="Id"
                asp-route-sortOrder="asc"
                style="text-decoration:none">
                   <i class="fa-solid fa-arrow-up" style="color:black"></i>
            </a>
                <a asp-page="/Accounts"
                asp-route-sortColumn="Id"
                asp-route-sortOrder="desc"
                style="text-decoration:none">
                <i class="fa-solid fa-arrow-down" style="color:black"></i>
            </a>
            </th>
            <th scope="col">Frequency
                <a asp-page="/Accounts"
                asp-route-sortColumn="Frequency"
                asp-route-sortOrder="asc"
                style="text-decoration:none">
                   <i class="fa-solid fa-arrow-up" style="color:black"></i>
            </a>
                <a asp-page="/Accounts"
                asp-route-sortColumn="Frequency"
                asp-route-sortOrder="desc"
                style="text-decoration:none">
                <i class="fa-solid fa-arrow-down" style="color:black"></i>
            </a>
            </th>
             <th scope="col">Created
                <a asp-page="/Accounts"
                asp-route-sortColumn="Created"
                asp-route-sortOrder="asc"
                style="text-decoration:none">
                   <i class="fa-solid fa-arrow-up" style="color:black"></i>
            </a>
                <a asp-page="/Accounts"
                asp-route-sortColumn="Created"
                asp-route-sortOrder="desc"
                style="text-decoration:none">
                <i class="fa-solid fa-arrow-down" style="color:black"></i>
            </a>
            </th>
            <th scope="col">Balance
                <a asp-page="/Accounts"
                asp-route-sortColumn="Balance"
                asp-route-sortOrder="asc"
                style="text-decoration:none">
                   <i class="fa-solid fa-arrow-up" style="color:black"></i>
            </a>
                <a asp-page="/Accounts"
                asp-route-sortColumn="Balance"
                asp-route-sortOrder="desc"
                style="text-decoration:none">
                <i class="fa-solid fa-arrow-down" style="color:black"></i>
            </a>
            </th>

        </tr>
    </thead>
    <tbody>
@{
     foreach(var account in Model.Accounts)
    {
        <tr>
            <th>@account.Id</th>
            <th>@account.Frequency</th>
            <th>@account.Created</th>
            <th>@account.Balance</th>
        </tr>
    }
}
</tbody>
</table>