@page
@model NorthWindApp.Pages.Customer.IndexModel
@{
    ViewData["Title"] = "Customer Details";
}

<div class="container">
    <div class="card">
        <h5 class="card-header">Customer Information</h5>
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Address, @Model.City</p>
            <hr>
            <h6 class="card-subtitle mb-2 text-muted">Accounts:</h6>
            <ul class="list-group list-group-flush">
                @foreach (var account in Model.Accounts)
                {
                    <li class="list-group-item">@account.Balance</li>
                }
            </ul>
        </div>
    </div>